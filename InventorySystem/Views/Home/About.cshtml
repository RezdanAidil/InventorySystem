@{
    ViewData["Title"] = "About Us";
}

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="jumbotron text-center bg-primary text-white p-5 rounded shadow">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <p class="lead">Empowering businesses with efficient and accurate inventory management.</p>
    </div>

    <!-- About Section -->
    <section class="my-5 text-center">
        <h2>Welcome to the Inventory System</h2>
        <p>Our platform helps businesses manage products and transactions effortlessly, ensuring real-time tracking and accuracy.</p>
    </section>

    <!-- Mission & Vision -->
    <section class="my-5">
        <div class="row text-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body">
                        <h3 class="card-title text-primary">Our Mission</h3>
                        <p class="card-text">To provide a reliable, user-friendly inventory solution that enhances efficiency and minimizes errors.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body">
                        <h3 class="card-title text-primary">Our Vision</h3>
                        <p class="card-text">To be the leading inventory management platform, empowering businesses with seamless tracking and management.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Why Choose Us -->
    <section class="my-5">
        <h2 class="text-center mb-4">Why Choose Us?</h2>
        <div class="row text-center">
            <div class="col-md-3">
                <i class="fas fa-bolt text-primary fa-3x"></i>
                <h5 class="mt-3">Efficiency</h5>
                <p>Streamlined product & transaction management.</p>
            </div>
            <div class="col-md-3">
                <i class="fas fa-check-circle text-success fa-3x"></i>
                <h5 class="mt-3">Accuracy</h5>
                <p>Real-time inventory tracking with minimal errors.</p>
            </div>
            <div class="col-md-3">
                <i class="fas fa-chart-line text-warning fa-3x"></i>
                <h5 class="mt-3">Scalability</h5>
                <p>Perfect for both small businesses and large enterprises.</p>
            </div>
            <div class="col-md-3">
                <i class="fas fa-user-friends text-info fa-3x"></i>
                <h5 class="mt-3">User-Friendly</h5>
                <p>Simple, intuitive, and easy-to-use interface.</p>
            </div>
        </div>
    </section>

    <!-- Meet Our Team -->
    <section class="my-5 text-center">
        <h2 class="mb-4">Meet Our Team</h2>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow p-3">
                    <h4 class="text-primary">Our Dedicated Team</h4>
                    <p><strong>HAZIQ, ZAHIDI, DANIAL, HAKIM, REZDAN, AIDIL, AMEER</strong></p>
                    <p>Our team of passionate developers and analysts work tirelessly to provide the best inventory management solutions.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="my-5 text-center">
        <h2>Contact Us</h2>
        <p>For inquiries or support, reach out at:</p>
        <a href="mailto:support@inventorysystem.com" class="btn btn-primary btn-lg">support@inventorysystem.com</a>
    </section>
</div>

