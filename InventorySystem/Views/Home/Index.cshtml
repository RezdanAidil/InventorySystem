@{
    ViewData["Title"] = "Home";
}

<div class="container text-center mt-5">
    <div class="jumbotron p-5 bg-gradient shadow-lg animate-fade-in rounded-4">
        <h1 class="display-3 fw-bold text-light"><i class="fas fa-store"></i> Welcome to Tech Store</h1>
        <p class="lead text-light">Effortlessly manage your products and transactions with ease.</p>
        <hr class="my-4 border-light">
        <p class="text-muted">Track inventory, update stock, and view transaction history seamlessly.</p>
        <a class="btn btn-primary btn-lg m-2 shadow-sm transition-scale" href="/Product"><i class="fas fa-box"></i> Manage Products</a>
        <a class="btn btn-outline-light btn-lg m-2 shadow-sm transition-scale" href="/Transaction"><i class="fas fa-exchange-alt"></i> View Transactions</a>
    </div>

    <div class="row mt-5">
        <div class="col-md-6">
            <div class="card bg-dark text-white shadow-lg animate-fade-in rounded-4 border-0">
                <div class="card-body text-center">
                    <i class="fas fa-cubes fa-3x text-primary mb-3"></i>
                    <h5 class="card-title fw-bold">Product Management</h5>
                    <p class="card-text text-muted">Easily add, update, and delete products from your inventory.</p>
                    <a href="/Product" class="btn btn-primary transition-scale"><i class="fas fa-box"></i> Go to Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-dark text-white shadow-lg animate-fade-in rounded-4 border-0">
                <div class="card-body text-center">
                    <i class="fas fa-history fa-3x text-warning mb-3"></i>
                    <h5 class="card-title fw-bold">Transaction History</h5>
                    <p class="card-text text-muted">View past transactions and monitor inventory changes.</p>
                    <a href="/Transaction" class="btn btn-primary transition-scale"><i class="fas fa-exchange-alt"></i> Go to Transactions</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: #121212;
        color: white;
        font-family: 'Arial', sans-serif;
    }

    .bg-gradient {
        background: linear-gradient(135deg, #0d6efd, #6a11cb);
        border-radius: 20px;
    }

    .jumbotron {
        padding: 60px;
    }

    .animate-fade-in {
        animation: fadeIn 0.6s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .transition-scale {
        transition: transform 0.3s ease;
    }

        .transition-scale:hover {
            transform: scale(1.05);
        }

    .card {
        padding: 30px;
    }

    .btn {
        font-size: 1.2rem;
        padding: 12px 20px;
    }
</style>
