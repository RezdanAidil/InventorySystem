@{
    ViewData["Title"] = "FAQ";
}

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="jumbotron text-center bg-primary text-white p-5 rounded shadow-lg">
        <h1 class="display-4 fw-bold">Frequently Asked Questions</h1>
        <p class="lead">Find answers to common questions about managing inventory and transactions.</p>
    </div>

    <!-- FAQ Section -->
    <section class="my-5">
        <div class="accordion" id="faqAccordion">
            <!-- Question 1 -->
            <div class="card shadow-lg mb-3 border-0 rounded-lg bg-dark text-white">
                <div class="card-header bg-secondary" id="faq1">
                    <h2 class="mb-0">
                        <button class="btn text-white text-decoration-none w-100 text-start" type="button" data-bs-toggle="collapse" data-bs-target="#collapse1" aria-expanded="true" aria-controls="collapse1">
                            <i class="fas fa-box text-primary"></i> How do I add a product?
                        </button>
                    </h2>
                </div>
                <div id="collapse1" class="collapse show" aria-labelledby="faq1" data-bs-parent="#faqAccordion">
                    <div class="card-body">
                        Navigate to the <strong>Products</strong> page and click <strong>"Add New Product"</strong> to enter product details.
                    </div>
                </div>
            </div>

            <!-- Question 2 -->
            <div class="card shadow-lg mb-3 border-0 rounded-lg bg-dark text-white">
                <div class="card-header bg-secondary" id="faq2">
                    <h2 class="mb-0">
                        <button class="btn text-white text-decoration-none w-100 text-start collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse2" aria-expanded="false" aria-controls="collapse2">
                            <i class="fas fa-list text-success"></i> How do I track transactions?
                        </button>
                    </h2>
                </div>
                <div id="collapse2" class="collapse" aria-labelledby="faq2" data-bs-parent="#faqAccordion">
                    <div class="card-body">
                        Go to the <strong>Transactions</strong> page to view and monitor all past transactions.
                    </div>
                </div>
            </div>

            <!-- Question 3 -->
            <div class="card shadow-lg mb-3 border-0 rounded-lg bg-dark text-white">
                <div class="card-header bg-secondary" id="faq3">
                    <h2 class="mb-0">
                        <button class="btn text-white text-decoration-none w-100 text-start collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse3" aria-expanded="false" aria-controls="collapse3">
                            <i class="fas fa-lock text-danger"></i> Is my data secure?
                        </button>
                    </h2>
                </div>
                <div id="collapse3" class="collapse" aria-labelledby="faq3" data-bs-parent="#faqAccordion">
                    <div class="card-body">
                        Yes, we use <strong>secure database connections</strong> and <strong>data encryption</strong> to ensure your information is protected.
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Support -->
    <section class="text-center mt-5">
        <h2>Still Have Questions?</h2>
        <p>Contact our support team for further assistance.</p>
        <a href="mailto:support@inventorysystem.com" class="btn btn-primary btn-lg">Contact Support</a>
    </section>
</div>

<!-- Ensure Bootstrap JS is included -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
